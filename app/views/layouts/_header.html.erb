<header>
  <nav>
    <%= link_to "Home", root_url %>
    <% if logged_in? %>
      <%= link_to "Profile", current_user %>
      <%= link_to "Settings", edit_user_path(current_user) %>
      <%= link_to "Logout", logout_path, method: "delete" %>
    <% elsif request.path != "/login" %>
      <%= render 'sessions/login_form' %>
    <% end %>
  </nav>
</header>
