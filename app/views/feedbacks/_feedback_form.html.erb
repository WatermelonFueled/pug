<%= form_for(@feedback) do |f| %>
  <%= hidden_field_tag :sender, @user %>
  <%= hidden_field_tag :recipient, @recipient %>

  <%= f.label :rating %>
  <%= f.label :rating, 'Negative', :value => '-1' %>
  <%= f.radio_button :rating, '-1' %>
  <%= f.label :rating, 'Neutral', :value => '0' %>
  <%= f.radio_button :rating, '0' %>
  <%= f.label :rating, 'Positive', :value => '1' %>
  <%= f.radio_button :rating, '1' %>

  <%= f.label :comment %>
  <%= f.text_field :comment, placeholder: "Leave a comment" %>

  <%= f.submit "Send feedback" %>
<% end %>
