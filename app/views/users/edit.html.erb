<h1>Account Settings</h1>
<%= form_for(@user) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Save changes" %>
<% end %>
