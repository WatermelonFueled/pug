<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= link_to "Forgot password", new_password_reset_path %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do%>
    <%= f.check_box :remember_me %>
    <span>Remember me</span>
  <% end %>

  <%= f.submit "Login" %>
<% end %>
